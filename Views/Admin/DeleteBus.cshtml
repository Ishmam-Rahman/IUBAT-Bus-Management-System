@model IUBAT_Bus_Management_System.Models.BusDetails

@{
    ViewData["Title"] = "DeleteBus";
}

<h3>Are you sure you want to delete this bus?</h3>
<div>
 
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BusName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BusName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DriverName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DriverName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DriverPhone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DriverPhone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DeparterTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DeparterTime)
        </dd>
    </dl>
    
    <form asp-action="DeleteBus">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="ShowBusList" class="btn btn-primary">Bus List</a>
    </form>
</div>
